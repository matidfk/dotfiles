#!/bin/sh
xset r rate 225 40 &
setxkbmap gb &
xsetroot -cursor_name left_ptr
xrandr --output HDMI-0 --primary --auto --output VGA-0 --auto --right-of HDMI-0

~/Scripts/randomtheme.sh

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
 for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
  [ -x "$f" ] && . "$f"
 done
 unset f
fi
